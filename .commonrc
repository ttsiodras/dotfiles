# Bug in current version of opam::utop - must clean up CAML_LD_LIBRARY_PATH
function utop()
{
    LIB=$(opam config var lib)
    export  CAML_LD_LIBRARY_PATH="$LIB/stublibs"
    BIN=$(opam config var bin)
    $BIN/utop
}

